        tools:layout_editor_absoluteY="56dp" />

    <ImageView
        android:id="@+id/image.png"
        android:layout_width="29dp"
        android:layout_height="26dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="40dp"
        android:tint="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/image" />

    <ImageView
        android:id="@+id/png2"
        android:layout_width="46dp"
        android:layout_height="48dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bottomAppBar3"
        app:srcCompat="@drawable/image" />

    <ImageView
        android:id="@+id/descricao.png"
        android:layout_width="244dp"
        android:layout_height="56dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toStartOf="@+id/png2"
        app:layout_constraintTop_toBottomOf="@+id/bottomAppBar3"
        app:srcCompat="@drawable/descricao" />

    <ImageView
        android:id="@+id/barrinha.png"
        android:layout_width="267dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
