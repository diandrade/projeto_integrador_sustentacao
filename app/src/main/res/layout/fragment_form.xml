        app:layout_constraintTop_toBottomOf="@+id/nome_evento_text" />

    <TextView
        android:id="@+id/endereco_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
