        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@+id/png2"
        app:layout_constraintTop_toTopOf="@+id/png2"
        app:srcCompat="@drawable/linhavert1" />

    <ImageView
        android:id="@+id/linhahor.png"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="@+id/png2"
        app:layout_constraintTop_toTopOf="@+id/png2"
        app:srcCompat="@drawable/linhahor" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="244dp"
        android:text="descricao"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bottomAppBar3" />

</androidx.constraintlayout.widget.ConstraintLayout>